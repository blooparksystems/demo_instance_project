<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="hr_leave_view_tree" model="ir.ui.view">
        <field name="name">hr.attendance.overtime.view.tree</field>
        <field name="model">hr.attendance.overtime</field>
        <field name="inherit_id" ref="hr_attendance.view_attendance_overtime_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='date']" position="before">
                <field name="request_date"/>
            </xpath>
            <xpath expr="//field[@name='date']" position="attributes">
                <attribute name="optional">hide</attribute>
            </xpath>
            <xpath expr="//field[@name='duration']" position="attributes">
                <attribute name="sum">Sum Duration</attribute>
            </xpath>
            
        </field>
    </record>

</odoo>
